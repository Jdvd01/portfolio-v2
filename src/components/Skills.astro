---
import SkillIcon from "./SkillIcon.astro";
---

<div class="flex flex-col justify-center gap-4 tablet:gap-6" id="skills">
	<h2 class="text-[#F8F9FA] text-2xl tablet:text-4xl text-start tablet:w-full">
		Skills
	</h2>

	<div
		class="flex justify-start items-center flex-wrap gap-2 tablet:px-0 w-full tablet:w-full tablet:justify-between desktop:justify-between"
	>
		<SkillIcon iconName="React" loading="eager" />
		<SkillIcon iconName="NodeJS" loading="eager" />
		<SkillIcon iconName="Express" loading="eager" />
		<SkillIcon iconName="Astro" loading="eager" />
		<SkillIcon iconName="Git" loading="lazy" />
		<SkillIcon iconName="Github" loading="lazy" />
		<SkillIcon iconName="Bootstrap" loading="lazy" />
		<SkillIcon iconName="ChakraUI" loading="lazy" />
		<SkillIcon iconName="Tailwind" loading="lazy" />
		<SkillIcon iconName="CSS" loading="lazy" />
		<SkillIcon iconName="Flask" loading="lazy" />
		<SkillIcon iconName="MySQL" loading="lazy" />
		<SkillIcon iconName="PostgreSQL" loading="lazy" />
		<SkillIcon iconName="Redux" loading="lazy" />
		<SkillIcon iconName="HTML" loading="lazy" />

		<span class="tablet:w-[23%] desktop:hidden"></span>
	</div>
</div>
