---
import socialMedia from "../utils/socialMedia.json";
---

<ul class="flex items-center justify-center gap-4">
	{
		socialMedia.map((item) => {
			return (
				<li>
					<a
						href={item.href}
						target="_blank"
						rel="noopener noreferrer"
						class={`flex items-center justify-center p-3 rounded-full  bg-[#2B2D42] ${item.color}`}
					>
						<i class={`fa-brands ${item.icon} text-2xl`} />
					</a>
				</li>
			);
		})
	}
</ul>
